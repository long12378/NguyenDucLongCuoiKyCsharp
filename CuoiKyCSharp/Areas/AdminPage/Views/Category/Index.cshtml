@model PagedList.IPagedList<ModelEF.Model.Category>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPage/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-sm-12">
        <section class="panel">
            <header class="panel-heading">
                Danh Sach Nguoi Dung
                <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-cog"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                </span>
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Category", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.searchstring" name="searchstring" />
                            </div>
                            <div class="con-md-4">
                                <button type="submit">search</button>
                            </div>
                        </div>
                    </div>
                }
                <section id="unseen">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <tr>
                                <th>Category name</th>
                                <th>decription</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Decription</td>
                                    <td>
                                        <a href="/AdminPage/Category/edit/@item.ID">Edit</a>
                                        @*<a href="/AdminPage/User/delete/@item.ID">Delete</a>*@
                                        @Ajax.ActionLink("xoa", "delete", new { @id = item.ID }, new AjaxOptions {
                                       Confirm = "do you really want to delete this record?",
                                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       HttpMethod = "delete"
                                   })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchstring = ViewBag.searchstring }))
                </section>
            </div>
        </section>
    </div>
</div>

